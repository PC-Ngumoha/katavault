{{>header}}

<section class="vh-100 gradient-custom">
  <div class="container py-5 h-100">
    <div class="row d-flex justify-content-center align-items-center h-100">
      <div class="col-12 col-md-8 col-lg-6 col-xl-5">
        <div class="card bg-dark text-white" style="border-radius: 1rem;">
          <div class="card-body p-5 text-center">

            <form method="POST" action="/register" class="mb-md-5 mt-md-4 pb-5">

              <div class="form-outline form-white mb-4">
                <input type="text" class="form-control form-control-lg" placeholder="First Name" name="firstName"/>
              </div>

              <div class="form-outline form-white mb-4">
                <input type="text" class="form-control form-control-lg" placeholder="Last Name" name="lastName"/>
              </div>

              <div class="form-outline form-white mb-4">
                <input type="text" class="form-control form-control-lg" placeholder="Registration Number" name="regNumber"/>
              </div>

              <div class="form-outline form-white mb-4">
                <input type="email" class="form-control form-control-lg" placeholder="Email Address" name="email"/>
              </div>

              <div class="form-outline form-white mb-4">
                <input type="password" class="form-control form-control-lg" placeholder="Enter Password" name="password"/>
              </div>

              <div class="form-outline form-white mb-4">
                <input type="password" class="form-control form-control-lg" placeholder="Re-enter Password" name="confirmPassword"/>
              </div>

              <button class="btn btn-outline-light btn-lg px-5" type="submit">Sign Up</button>

            </form>

            <div>
              <p class="mb-0">Have an account? <a href="/login" class="text-white-50 fw-bold">Login</a>
              </p>
            </div>

          </div>
        </div>
      </div>
    </div>
  </div>
</section>

{{>footer}}